<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
	

<struts>

    <constant name="struts.devMode" value="true" />
    <package name="iso3" namespace="/iso3" extends="struts-default">
		<default-interceptor-ref name="paramsPrepareParamsStack"/>
        <action name="HelloWorld" class="iso3.pt.Struts2HelloWorld">
            <result>/jsp/HelloWorld.jsp</result>
        </action>


		<!-- Login Form Configuration -->
        <action name="showLogin">
			<result>/jsp/login.jsp</result>
        </action>

        <action name="doLogin" class="iso3.pt.Login">
            <result  name="input">/jsp/login.jsp</result>
			<result  name="error">/jsp/login.jsp</result>
			<result>/jsp/loginsuccess.jsp</result>
        </action>

        <action name="showLoginClientSideValidation">
			<result>/jsp/loginClientSideValidation.jsp</result>
        </action>

        <action name="doLoginClientSideValidation" class="iso3.pt.Login">
            <result  name="input">/jsp/loginClientSideValidation.jsp</result>
			<result  name="error">/jsp/loginClientSideValidation.jsp</result>
			<result>/jsp/loginsuccess.jsp</result>
        </action>
		
		<action name="languageDesigners" class="iso3.pt.LanguageDesignerAction" method="listing">
			<result>/jsp/languageDesignersJSP.jsp</result> <!-- es lo mismo que LDA.java succes -->
			<!--<result>/jsp/languageDesigners.jsp</result>-->
			<result name="designerMarked">/jsp/languageDesignersWithMark.jsp</result>
        </action>
		
		<!-- Login Form configuration ends-->





         <!-- Add actions here -->
    </package>


    <!-- Add packages here -->

</struts>
